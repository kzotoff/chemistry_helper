<?xml version="1.0" encoding="utf-8"?><xsl:stylesheet id="document" version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform"><xsl:output method="html" encoding="utf-8" indent="yes" /><xsl:template match="/root">	<form action="./" method="post" class="form-horizontal item_edit_form">		<input type="hidden" name="module" value="filemanager" />		<input type="hidden" name="action" value="update_file" />		<input type="hidden" name="category" value="{category}" />		<input type="hidden" name="filename" value="{filename}" />		<div class="form-group">			<label class="control-label" for="module_admin_edit_filename">Имя файла</label>			<input class="form-control" id="module_admin_edit_filename" type="text" name="new_filename" value="{filename}" />		</div>		<div class="form-group">			<label class="control-label" for="module_admin_edit_content">Содержимое</label>			<textarea class="form-control" id="module_admin_edit_content" name="filecontent" rows="12"><xsl:value-of select="content" /></textarea>		</div>		<div class="edit-dialog-buttons">			<div class="form-group tab-behavior">				<input type="checkbox" id="tab-behavior-checkbox" checked="checked" />				<label class="control-label" for="tab-behavior-checkbox">Tab для табуляции</label>			</div>			<input type="submit" value="Сохранить" class="btn btn-primary" />			<input type="button" value="Отмена" class="btn btn-primary" data-action="filemanager-edit-cancel" />		</div>	</form></xsl:template></xsl:stylesheet>