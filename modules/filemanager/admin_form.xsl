<?xml version="1.0" encoding="utf-8"?><xsl:stylesheet id="document" version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform"><xsl:output method="html" encoding="utf-8" indent="yes" /><xsl:template match="/root">	<div data-module="filemanager">		<h3>Управление файлами</h3>		<div class="admin-buttons">			<form class="form-inline">				<input type="button" class="btn btn-default" value="Создать файл" data-action="filemanager-add-item" />			</form>						<form action="." method="get" class="form-inline">				<label for="category_selector">категория:</label>				<input type="hidden" name="module" value="filemanager" />				<input type="hidden" name="action" value="manage" />				<select class="form-control" id="category_selector" name="category">					<option value="">выбрать...</option>					<xsl:apply-templates select="directories/directory" />				</select>				<input type="submit" class="btn btn-default" value="Перейти" />			</form>			<form action="." method="post" enctype="multipart/form-data" class="form-inline">				<label for="filelist">загрузить еще:</label>				<input type="hidden" name="module" value="filemanager" />				<input type="hidden" name="action" value="upload" />				<input type="hidden" name="category" value="{/root/category}" />				<input type="file" class="form-control" id="filelist" name="files[]" multiple="multiple" />				<input type="submit" class="btn btn-default" value="Загрузить" />			</form>					</div>		<h4><xsl:value-of select="/root/full-path" /></h4>		<table class="tablesorter table table-bordered unified-table">			<thead>				<tr>					<th>файл</th>					<th>действия</th>				</tr>			</thead>			<tbody>				<xsl:apply-templates select="files/file" />			</tbody>		</table>	</div></xsl:template><xsl:template match="/root/category"></xsl:template><xsl:template match="directory">	<option value="{alias}">		<xsl:if test="@selected='selected'">			<xsl:attribute name="selected">selected</xsl:attribute>		</xsl:if>		<xsl:value-of select="caption" />		</option></xsl:template>		<xsl:template match="file">	<tr class="item_info_row">	<td><xsl:value-of select="filename" /></td>	<td class="actionboard" data-path="{path}" data-category="{/root/category}">		<a class="row-inline-button" data-action="filemanager-edit-item"><img src="modules/content/images/pencil.gif" alt="" /></a>		<a class="row-inline-button" data-action="filemanager-delete-item"><img src="modules/content/images/redcross.gif" alt="" /></a>	</td>	</tr></xsl:template></xsl:stylesheet>